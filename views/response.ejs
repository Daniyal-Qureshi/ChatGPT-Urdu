<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Urdu GPT</title>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <script src="home.js" type="module"></script>

    <link
      href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900"
      rel="stylesheet"
    />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <%- include('modal') %>
    <div class="wrapper d-flex align-items-stretch">
      <%- include('sidebar') %>

      <!-- Page Content  -->
      <div id="content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container-fluid">
            <button type="button" id="sidebarCollapse" class="btn btn-primary">
              <i class="fa fa-bars"></i>
              <span class="sr-only">Toggle Menu</span>
            </button>
          </div>
        </nav>

        <form
          method="post"
          action="/open"
          class="w-100 d-flex align-items-end flex-column"
          id="text"
        >
          <div
            class="d-flex justify-content-center flex-row scrollable-content"
          >
            <div class="w-100">
              <% responses.map((response) => { %>
              <div class="border-top border-bottom" style="background: white">
                <div class="d-flex justify-content-center">
                  <h4 class="m-4 text-center w-50"><%= response.question %></h4>
                </div>
              </div>
              <div class="d-flex justify-content-center">
                <h4 class="answer m-4 w-50"><%= response.answer %></h4>
              </div>
              <% }); %>
            </div>
          </div>

          <div class="d-flex justify-content-center w-100 mt-2" style="height:80px">
            <% if(error) { %>
            <div
              class="fs-6 card m-3 p-2 text-black"
              style="background-color: #ffcccb"
            >
              <%= error %>
            </div>
            <% } %>
          </div>
          <div class="w-100 d-flex justify-content-center">
            <textarea
              name="prompt"
              class="form-control mt-3 fs-4 w-75 w-sm-100"
              id="target"
              rows="1"
              required="true"
              oninput="this.style.height = ''; this.style.height = this.scrollHeight +'px'"
            ></textarea>

            <button
              type="submit"
              class="mt-2 fs-5"
              style="border: none; background: none"
            >
              <i
                class="fa fa-paper-plane border-radius"
                aria-hidden="true"
                style="font-size: 30px; color: #f8b739"
              ></i>
            </button>
          </div>
        </form>
      </div>
    </div>

    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>

    <script src="js/main.js"></script>
    <script>
      let elements = document.getElementsByClassName("answer");
      for (let element of elements) element.innerHTML = element.innerText;

      if ("<%= error %>" == "Please provide the API Key") {
        let API_KEY = prompt("Please Enter your API KEY");
        if (API_KEY) {
          window.location = `/set/${API_KEY}`;
        }
      }

      $(document).ready(function () {
        // When the user clicks on a button or link to open the modal
        $(".demo").click(function () {
          $(".modal").css("display", "block");
        });

        // When the user clicks on the close button or anywhere outside the modal content
        $(".close, .modal").click(function () {
          $(".modal").css("display", "none");
        });

        // Prevent clicks inside the modal content from closing the modal
        $(".modal-content").click(function (event) {
          event.stopPropagation();
        });
      });
    </script>
  </body>
</html>
